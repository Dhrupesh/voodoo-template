<openerp>
    <data>

        <record model="ir.ui.view" id="view_company_be2bill_form">
            <field name="name">res.company.form.be2bill</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Configuration']" position="after">
                    <page string="Be2bill Info">
                        <field name="be2bill_account_ids">
                            <tree>
                                <field name="login"/>
                                <field name="email_to"/>
                            </tree>
                            <form>
                                <field name="login"/>
                                <field name="password" password="True"/>
                                <field name="email_to"/>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
