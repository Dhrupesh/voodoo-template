<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="custom_product_form_view" model="ir.ui.view">
            <field name="model">product.product</field>
            <field name="inherit_id" ref="multi_company_supplier.product_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='general']/field[@name='cost_method']" position="after">
                    <field name="dollar_purchase_price" string='Prix achat ($)'/>
                    <field name="pound_purchase_price" string='Prix achat (Â£)'/>
                </xpath>
            </field>
        </record>

        <record id="custom_product_form_geolocation_view" model="ir.ui.view">
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_normal_procurement_locations_form"/>
            <field name="arch" type="xml">
                <field name="loc_case" position="after">
                    <field name="geolocation" string='Product Location'/>
                </field>
            </field>
        </record>
    </data>
</openerp>

