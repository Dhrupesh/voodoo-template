<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_picking_out_form" model="ir.ui.view">
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_form" />
            <field name="arch" type="xml">
                <field name="move_lines" position="after">
                    <field name="order_message_ids" nolabel="1" widget="mail_thread" readonly="True"/>
                </field>
            </field>
        </record>

        <record id="custom_view_move_picking_form" model="ir.ui.view">
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form" />
            <field name="arch" type="xml">
                <button name="cancel_assign" position="after">
                    <button name="action_cancel" states="assigned,confirmed" string="Cancel Move" type="object"/>
                </button>
            </field>
        </record>

        <record id="view_move_picking_tree" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree" />
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="bom_id" />
                </field>
                <field name="state" position="after">
                    <field name="date_planned_purchase" />
                    <field name="po_info" />
                    <button name="cancel_move_confirmation" states="assigned,confirmed" string="Cancel Move" type="object" icon="gtk-cancel"/>
                </field>
            </field>
        </record>

        <record id="view_picking_in_search" model="ir.ui.view">
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_picking_in_search"/>
            <field name="arch" type="xml">
                <filter string="Status" position="after">
                    <filter domain="[]" context="{'group_by':'partner_id'}" string="Partner"/>
                </filter>
           </field>
        </record>

        <record id="view_picking_out_search" model="ir.ui.view">
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_search"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="product_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

